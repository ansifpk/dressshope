    <script>
       async function handleClick(button,refferalCode){
            
            const email = document.getElementById("email").value.trim()
            const name = document.getElementById("name").value.trim()
            const mobile = document.getElementById("mobile").value.trim()
            const password = document.getElementById("password").value.trim()

            const emailError = document.getElementById("emailError")
            const nameError = document.getElementById("nameError")
            const mobileError = document.getElementById("mobileError")
            const passwordError = document.getElementById("passwordError")
           
            let success = true;
            if(name.length == 0){
                nameError.style.display = "block"
                success = false
            }else{

                nameError.style.display = "none"
            }
             if(email.length == 0 || !/^[A-Za-z0-9.%+-]+@gmail\.com$/.test(email)){
                emailError.style.display = "block"
                emailError.textContent="Invalid Email Structure."
                success = false
            }else{
                emailError.style.display = "none"
            }
             if(password.length < 8 || password.length >20){
                success = false
                passwordError.style.display = "block"
                passwordError.textContent="Password should be inbetween 8 - 20."
            }else{
                passwordError.style.display = "none"
            }
             if(mobile.length !==10){
                success = false
                mobileError.style.display = "block"
                mobileError.textContent="Invalid mobile number."
            }else{
                mobileError.style.display = "none"
            }
          
            if (success == false) {
              
                    return
            }

             Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes`
                    }).then((result)=>{
                        if(result.isConfirmed){

                            button.disabled=true
                            button.innerHTML= `<div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden"></span>
                                    </div>
                                    SENDING OTP...
                                    `;
                            fetch(`/register?refferalCode=${refferalCode}`,{ method: "POST",
                                    headers: {
                                        "Content-Type": "application/json"
                                    },
                                    body:JSON.stringify({name,email,password,mobile})}
                                ).then((res)=>res.json())
                                .then((res)=>{                                    
                                       if(res.success){
                                           window.location.href=`/otp?email=${email}`;
                                       }else{
                                         button.disabled=false;
                                         button.innerHTML = `<span>SIGN UP</span>
			            						<i class="icon-long-arrow-right"></i>
                                                `
                                        if(res.nameError){
                                             nameError.style.display = "block"
                                             nameError.textContent = res.nameError
                                        }else if(res.emailError){
                                            emailError.style.display = "block"
                                            emailError.textContent=res.emailError
                                        }else if(res.passwordError){
                                             passwordError.style.display = "block"
                                             passwordError.textContent = res.passwordError
                                        }else if(res.mobileError){
                                             mobileError.style.display = "block"
                                             mobileError.textContent = res.mobileError
                                        }
                                       }
                                })
                        }
                    })
        }
    </script>
