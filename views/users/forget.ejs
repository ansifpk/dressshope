<script>
    function handleSubmit() {
         const email = document.getElementById("singin-email").value
         const button = document.getElementById("button")

         fetch("/forget",{method:"POST",body:JSON.stringify({email}),headers:{"Content-Type":"application/json"}}).then((res)=>res.json())
         .then((res)=>{
           if(res.success){
            document.getElementById("singin-email").value = ""
             Swal.fire({
                title: res.message,
                icon: "success",
                draggable: true
            });
           }else{
            Swal.fire({
                title:res.message,
                icon: "warning",
                draggable: true
            });
           }
         });
    }
</script>
