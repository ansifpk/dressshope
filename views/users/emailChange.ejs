    <script>
        function handleSubmit() {
            const editButton = document.getElementById("editButton")
            const emailLabel = document.getElementById("emailLabel")
            const email = document.getElementById("email").value.trim()
            let error = false;
         
          
            if(email.length == 0){
                emailLabel.style.color = "red";
                error = true;
            }else{
                emailLabel.style.color = ""
            }
          
            if(error){
                 Swal.fire({
                    title:"Warning!.",
                    text:"Please Provide All Informations!.",
                    icon: "warning",
                });
            }

            
            Swal.fire({
                title: "Do you want to save the changes?",
                showCancelButton: true,
                confirmButtonText: "Save",
                }).then((result) => {
                    if (result.isConfirmed) {
                        editButton.innerHTML = `<div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden">SENDING OTP...</span>
                                    </div>
                                    SENDING OTP...
                                    `
                        editButton.disabled = true;
                         fetch('/changeEmail',{method:'PATCH',body:JSON.stringify({email}),headers:{"Content-Type":"application/json"}}).then((res)=>res.json())
                        .then((res)=>{
                            if(res.success){
                            Swal.fire({
                                title:"Success",
                                text: 'OTP Sented to your new email!.',
                                icon: "success",
                            });
                            editButton.disabled = false
                            document.getElementById("button").click()
                             editButton.innerHTML = `<span>EDIT</span>
			            						<i class="icon-long-arrow-right"></i>
                                    `
                            }else{
                                editButton.innerHTML = `<span>EDIT</span>
			            						<i class="icon-long-arrow-right"></i>
                                    `
                                editButton.disabled = false
                            Swal.fire({
                                title:"Warning!.",
                                text:res.message,
                                icon: "warning",
                            });
                            }
                        });
                    } 
            }); 
        }
    </script>

    <script>
        function handleOtp() {
            const otpButton = document.getElementById("otpButton")
            const email = document.getElementById("email").value.trim()
            otpButton.disabled = true
            const otp = document.getElementById("otp").value.trim();
            if(otp.length == 0){
                 Swal.fire({
                    title:"Warning!.",
                    text: "Please Enter The OTP",
                    icon: "warning",
                  });
                return;
            } 
            console.log(otpButton.innerHTML,"1");
            
            otpButton.innerHTML = `<div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden">VERIFYING OTP...</span>
                                    </div>
                                    VERIFYING OTP...
                                    `
            console.log(otpButton.innerHTML,"2");
            editButton.disabled = true;

            fetch("/verifychangeEmailOtp",{method:"DELETE",body:JSON.stringify({otp,email}),headers:{"Content-Type":"application/json"}}).then((res)=>res.json())
            .then((res)=>{
                  otpButton.disabled = false;
                if(res.success){
                  Swal.fire({
                    title:"Success!.",
                    text: res.message,
                    icon: "success",
                  });
                  window.location.href="/profile"
                }else{
                     otpButton.innerHTML = `<span>VERIFY</span>
			            					<i class="icon-long-arrow-right"></i>`
                      otpButton.disabled = false;
                     Swal.fire({
                    title:"Warning!.",
                    text: res.message,
                    icon: "warning",
                  });
                }
                
            })
        }
    </script>
    <script>

      const disable = document.getElementById("resendButton");
      const expire = document.getElementById('expire');
      expire.innerText=60;
      const expireInterval = setInterval(function(){
