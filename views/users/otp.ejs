     <script>
      // timer
       
      const disable = document.getElementById("disable");
      disable.disabled=true;
      const expire = document.getElementById('expire');
      expire.innerText=60;
      const expireInterval = setInterval(function(){
        expire.innerText--;
        if(expire.innerText==0){
          clearInterval(expireInterval);
          disable.disabled=false
        }
      },1000)

      // resend otp
      function resend(email){
    
        fetch(`/resend?email=${email}`).then((res)=>res.json())
        .then((res)=>{
            if(res.success){
                const expire = document.getElementById('expire');
                expire.innerText=60;
              Swal.fire({
                title:"New OTP Sented To Your Email",
                icon: "success",
                draggable: true
              });
            }else{
                Swal.fire({
                title: res.message,
                icon: "warning",
                draggable: true
                })
            }
        });

      }

      // handle submit

      async function handleClick(email){
        const otp = document.getElementById("otp").value.trim()
        const label = document.getElementById("otpLabel")
 
        if(otp.length == 0){
           label.style.color= "red"
            Swal.fire({
                title:"Please Enter Your OTP",
                icon: "warning",
                draggable: true
            });
            return;
        }else{
           label.style.color= ""
        }

        const response = await  fetch("/otp",{method:"POST",
        headers:
         {
          "Content-Type": "application/json"
         },
        body:JSON.stringify({otp,email})}).then((res)=>res.json())
        .then((res)=>{
            if(res.success){
              window.location.href="/home"
            }else{
                
                if(res.success){
                     Swal.fire({
                        title:res.message,
                        icon: "success",
                        draggable: true
                    });
                }else{
                    Swal.fire({
                        title:res.message,
                        icon: "warning",
                        draggable: true
                    });
                }
        
            }
        });
      }

    </script>
