    <script>


       async function handleCart(productId){

           const response = await fetch(`/cart?productId=${productId}`,{method:"PATCH",body:JSON.stringify({quantity:1}),headers:{"Content-Type": "application/json"}}).then((res)=>{
              if(res.status == 401){

                Swal.fire({
                title:"Please Login!.",
                icon: "warning",
                draggable: true
                });
                window.location.href = "/"
                return;
              }else{
                return res.json();
              }
           })
           .then((res)=>{
            if(res.success){
             if(res.added){
                Swal.fire("Product added to your Cart!");
                document.getElementById(`cart${productId}`).innerText="remove from cart";
                document.getElementById('cart-count').innerText=`${res.count}`;
                document.getElementById('cart-txt').innerText=`Rs.${res.totel}.00`;
             }else if(res.removed){
                Swal.fire("Product removed from your Cart!");
                document.getElementById(`cart${productId}`).innerText="add to cart";
                document.getElementById('cart-count').innerText=`${res.count}`;
                document.getElementById('cart-txt').innerText=`Rs.${res.totel}.00`;
             }

           }else{
            Swal.fire(res.message);
           }
           });
        }




        function handlewishlist(productId,num){

            fetch(`/wishlist?productId=${productId}`,{method:"PATCH",headers:{"Content-Type":"application/json"}}).then((res)=>{
                 if(res.status == 401){
                Swal.fire({
                title:"Please Login!.",
                icon: "warning",
                draggable: true
                });
                window.location.href = "/"
                return;
              }else{
               return res.json();
              }
            }).then((data)=>{
                if(data.added){
                  
                    const wishlist = document.getElementById(`wishlist${num}`);
                    const text = document.getElementById(`text${num}`);
                    wishlist.style.backgroundColor="red";
                    text.innerText="remove from wishlist"
                    document.getElementById("wishlist").innerText=`${data.totelProducts}`
                    Swal.fire("Product added to your wishlist!");

                }else if(data.removed){
                    const wishlist2 = document.getElementById(`wishlist${num}`);
                    const text2 = document.getElementById(`text${num}`);
                    wishlist2.style.backgroundColor="white"
                    text2.innerText="add to wishlist";
                     document.getElementById("wishlist").innerText=`${data.totelProducts}`
                    Swal.fire("Product removed to your wishlist!");
                   
                }else{
                    Swal.fire(data.message);
                    
                }  
                
            });
        }  
    </script>
