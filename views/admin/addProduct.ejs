                                                    name="file" 
                                                    id="file-upload<%= i %>" 
                                                    onchange="preview('<%= i %>')"  
                                                    type="file" 
                                                    required
                                                    class="form-control mb-2"  
                                                />
                                                    <img 
                                                        src="" 
                                                        alt="Preview" 
                                                        id="file-preview<%= i %>" 
                                                        style="width: 200px; height: 150px; border-radius: 10px; object-fit: cover; border: 1px solid #ccc;" 
