    <script>

        function preview(id) {
          const input = document.getElementById(`file-upload${id}`);
          const file = input.files
                if (file) {
                    const fileReader = new FileReader();
                    const preview = document.getElementById(`file-preview${id}`);
                    fileReader.onload = function (event) {
                        preview.setAttribute('src', event.target.result);
                    }
                    fileReader.readAsDataURL(file[0]);
                }
          
        }
        
    </script>
    <script>
        function handleClick() {
            
            const title =  document.getElementById("title").value.trim();
            const titleLabel =  document.getElementById("titleLabel");
            const description =  document.getElementById("description").value.trim();
            const descriptionLabel =  document.getElementById("descriptionLabel");
            const price =  document.getElementById("price").value.trim();
            const priceLabel =  document.getElementById("priceLabel");
            const stock =  document.getElementById("stock").value.trim();
            const stockLabel =  document.getElementById("stockLabel");
            const category =  document.getElementById("category").value;
            const categoryLabel =  document.getElementById("categoryLabel");

            const upload0 =  document.getElementById("file-upload0").files[0]
            const upload1 =  document.getElementById("file-upload1").files[0]
            const upload2 =  document.getElementById("file-upload2").files[0]
            const upload3 =  document.getElementById("file-upload3").files[0]

            const fileUploadLabel0 =  document.getElementById("fileUploadLabel0")
            const fileUploadLabel1 =  document.getElementById("fileUploadLabel1")
            const fileUploadLabel2 =  document.getElementById("fileUploadLabel2")
            const fileUploadLabel3 =  document.getElementById("fileUploadLabel3")
            console.log(stock);
            
            const button =  document.getElementById("button")
            // console.log(button);

            let error = false;

            if(title.length == 0){
             titleLabel.style.color="red"
             error = true;
            }else{
             titleLabel.style.color=""
            }
            if(description.length == 0){
             descriptionLabel.style.color="red"
             error = true;
            }else{
             descriptionLabel.style.color=""
            }
            if(price.length == 0){
             priceLabel.style.color="red"
             error = true;
            }else{
             priceLabel.style.color=""
            }
            if(stock.length == 0){
             stockLabel.style.color="red"
             error = true;
            }else{
             stockLabel.style.color=""
            }

            if(category.length == 0){
             categoryLabel.style.color="red"
             error = true;
            }else{
             categoryLabel.style.color=""
            }

            if(!upload0){
             fileUploadLabel0.style.color="red"
             error = true;
            }else{
             fileUploadLabel0.style.color=""
            }
            if(!upload1){
             fileUploadLabel1.style.color="red"
             error = true;
            }else{
             fileUploadLabel1.style.color=""
            }
            if(!upload2){
             fileUploadLabel2.style.color="red"
             error = true;
            }else{
             fileUploadLabel2.style.color=""
            }
            if(!upload3){
             fileUploadLabel3.style.color="red"
             error = true;
            }else{
             fileUploadLabel3.style.color=""
            }

            if(error){
                Swal.fire({
                    title:"Error!.",
                    text: "Please Provide All Informations!.",
                    icon: "warning",
                });
                return;
            } 

            const formData = new FormData();
            formData.append("title",title)
            formData.append("description",description)
            formData.append("category",category)
            formData.append("stock",stock)
            formData.append("price",price)
            for (let i = 0; i < 4; i++) {
                
                formData.append(`file-upload${i}`,document.getElementById(`file-upload${i}`).files[0])
            }

           

             Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes`
                    }).then((result)=>{
                        if(result.isConfirmed){
                           button.disabled =true
                            button.innerHTML =button.innerHTML = `
                                    <div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    Loading...
                                    `;
                               fetch(`/admin/addProducts`,{method:"POST",body:formData,"Content-Type":"multipart/form-data"}).then((res)=>res.json())
                               .then((res)=>{
                                  if(res.success){
                                    Swal.fire({
                                        title:"Success!.",
                                        text:res.message,
                                        icon: "success",
                                    });
                                    button.disabled =true;
                                    window.location.href="/admin/viewProducts";
                                }else{
                                    button.disabled =false
                                    button.innerText="Edit Product"
                                    Swal.fire({
                                        title:"Error!.",
                                        text:res.message,
                                        icon: "warning",
                                    });
                                }
                            })
                        }
                    })
        }
    </script>
