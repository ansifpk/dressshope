                const totalPage = document.getElementById("totalPage");
                const table = document.getElementById("table");
           
                
                fetch(`/admin/searchrUser?search=${search}`).then((res)=>res.json())
                .then((res)=>{
                    console.log(res);
           
                    document.getElementById("sort").value = ''
                    if(res.users.length == 0){
                      page.innerText = 0;
                      totalPage.value = 0;
                      table.innerHTML =  `
                           <tr>
                                <td colspan="3">Users Not Found</td>
                            </tr>
                         `
                    }else{
                      page.innerText = 1;
                    totalPage.value = res.totalPage;
                      table.innerHTML=
                        res.users.map((user) => {
                           return   `
                            <tr>
                                <td>${user.name}</td>
                                <td>${user.email}</td>
                                <td>${user.mobile}</td>
                                <td>
