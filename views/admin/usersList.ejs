        <script>
            function handleFilter() {

                const sort = document.getElementById("sort").value;
                const search = document.getElementById("search").value;
                let table = document.getElementById("table");
                let page = document.getElementById("page");

                fetch(`/admin/sortUser?search=${search}&&sort=${sort}`).then((res)=>res.json())
                .then((res)=>{

                    if(res.users.length == 0){
                          page.innerText = 0;
                          table.innerHTML =  `
                           <tr>
                                <td colspan="3">Users Not Found</td>
                            </tr>
                         `
                    }else{
                      page.innerText = 1;
                      table.innerHTML=
                        res.users.map((user) => {
                           return   `
                            <tr>
                                <td>${user.name}</td>
                                <td>${user.email}</td>
                                <td>${user.mobile}</td>
                                <td>
                                    <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                        <button class="btn btn-sm font-sm rounded  ${user.is_blocked?"btn-danger":"btn-success"} text-white" onclick="blokUser(this,'${user._id}') "> ${user.is_blocked?"Unblock":"Block"} </button>
                                    </div>
                                </td>   
                            </tr>
                        `
                        }).join("");
                    }
                });
            }
        </script>
        <script>
            function handlesearch() {
                const search = document.getElementById("search").value.trim();
