        </script>
        <script>
            function handlePage(action) {
                const sort = document.getElementById("sort").value;
                const totalPage = document.getElementById("totalPage").value;
                const search = document.getElementById("search").value.trim();
                let table = document.getElementById("table");
                let page = document.getElementById("page");
                   console.log(search,totalPage*1,page.innerText*1,sort);
                  
                 if(action == "increment" && page.innerText*1<totalPage*1){
                  page.innerText++
                 }else if(action == "decrement" && page.innerText*1>1){
                  page.innerText--
                 }else{
                    return;
                }

                fetch(`/admin/userPagination?search=${search}&&page=${page.innerText*1}&&sort=${sort}`).then((res)=>res.json())
                .then((res)=>{
                    console.log("res",res);
                    table.innerHTML=
                        res.users.map((user) => {
                           return   `
                            <tr>
                                <td>${user.name}</td>
                                <td>${user.email}</td>
                                <td>${user.mobile}</td>
                                <td>
                                    <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                        <button class="btn btn-sm font-sm rounded  ${user.is_blocked?"btn-danger":"btn-success"} text-white" onclick="blokUser(this,'${user._id}') "> ${user.is_blocked?"Unblock":"Block"} </button>
                                    </div>
                                </td>   
                            </tr>
                        `
                        }).join("");
                })
            }
