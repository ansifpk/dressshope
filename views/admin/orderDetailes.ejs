   console.log(total.innerText,discount.innerText,gtotal.innerText);
   
   if(changeStatus.value == 'Change status') {
    return ;
   }
    Swal.fire({
        title: "Are you sure?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, cancel it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/admin/orderStatus?_id=${orderId}`,{method:"PATCH",body:JSON.stringify({changeStatus:changeStatus.value}),headers:{"Content-Type":"application/json"}}).then((res)=>res.json())
                .then((res)=>{
                    
