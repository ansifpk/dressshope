});

   }



    function reason(reason,productId,orderId){
        const  tag = document.getElementById(`remove${productId}`);
        const  badge = document.getElementById(`badge${productId}`);
        const  total = document.getElementById(`Total`);
        const  coupon = document.getElementById(`Coupon Discount`);
        const  gTotal = document.getElementById(`Grand Total`);
       
        
        Swal.fire({
            title: "Do you Accept This Request?",
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: "Accept",
            denyButtonText: `Don't Accept`,
            text:reason
        }).then((result) => {
            let status = ""
         
            if(result.isDismissed){
                return
            }

            if (result.isConfirmed) {
                status = "return"
            } else {
                status = "Delivered"
            }

            fetch(`/admin/returnOrder?orderId=${orderId}`,{method:"PATCH",body:JSON.stringify({status,productId}),headers:{"Content-Type":"application/json"}}).then((res) =>res.json())
            .then((res)=>{
             
               if(res.success){
                
                   
                   tag.remove()
                    if (result.isConfirmed) {
                        Swal.fire("Accepted The Request", "", "success");
                        badge.innerText = 'return'
                        total.innerText = total.innerText - res.returnAmount
                        if(total.innerText == 0){
                            gTotal.innerText = 0
                            coupon.innerText = 0
                        }
                        
                    } else if (result.isDenied) {
                        Swal.fire("Declained The Request", "", "success");
                        badge.classList.remove("btn-danger")
                        badge.classList.add("btn-success")
                        badge.innerText = 'Delivered'
                    }
               } else {
                   Swal.fire({
                     title: "Warning",
                     text:res.message,
                     icon: "warning",
                   })
               }
            })
        });
    }       



   const button = document.querySelector('.button');
   if(button){
       button.disabled = true;
   }

