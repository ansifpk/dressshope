                                     <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Total</td>
                                        <td id="Total">${changeStatus.value == "canceled"?0:total.innerText}</td>
                                </tr>
                                <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Coupon Discount</td>
                                        <td id="Coupon Discount">${changeStatus.value == "canceled"?0:discount.innerText}</td>
