<script>

    const date = document.getElementById("date")
console.log(date)


function orderStatus(productId){
    const  changeStatus = document.getElementById("changeStatus");
    const status =  document.getElementById("badge");
   
    fetch(`/admin/orderStatus?changeStatus=${changeStatus.value}&productId=${productId}`);
    
    status.innerText=changeStatus.value;
    if(status.innerText==="canceled"){
        status.style.backgroundColor="red";
    }else{
        status.style.backgroundColor="green";
    }
   
}
  


   function cancelOrder(orderId){
   
    Swal.fire({
  title: "Are you sure?",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, cancel it!"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "canceled!",
      text: "This order has been canceled.",
      icon: "success"
    });
    const cancelButton = document.querySelector('.btnn');
    cancelButton.disabled = true;

    var status = document.getElementById("badge")
    status.innerHTML="canceled";
    status.style.color="white"
    status.style.backgroundColor="red"

    fetch(`/admin/cancelOrder?orderId=${orderId}`);
  }
});

   }



function reason(){
   const  reason = document.getElementById("reason");
   console.log(reason);
   Swal.fire({
  position: "center",
  title:reason.value ,
  showConfirmButton: true,
});
}



   const button = document.querySelector('.button');
   if(button){

       button.disabled = true;
   }

</script>
