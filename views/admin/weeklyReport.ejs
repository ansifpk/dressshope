       <script>
   
   
    function dateChange(){
      const eDate = document.getElementById("eDate").value
      const reports = document.getElementById("reports")
      fetch(`/admin/dateChange?eDate=${eDate}&&type=weekly`).then((res)=>res.json())
      .then((data)=>{

         reports.innerHTML = ` <a href="/admin/createReport?startYearly=${data.start}&endYearly=${data.end}" class="btn btn-primary ${data.array.length > 0?"":"disabled"} "><i class="text-muted material-icons md-post_add"></i>Create report</a>
                        <a href="/admin/createReportPdf?startYearly=${data.start}&endYearly=${data.end}" class="btn btn-primary  ${data.array.length > 0?"":"disabled"}"><i class="text-muted material-icons md-post_add"></i>Create report in pdf</a>
                       `
       
        if(data.array.length == 0){
                
                document.getElementById("table").innerHTML = ` <tr>
                                                <td>No Order Made In This Weak</td>
                                              </tr>`
                
            }else{
               
                document.getElementById("table").innerHTML = 
                data.array.map((product)=>{
                   return  `
                      <tr>
                                                    
                                                    <td class="text-center">${product.deliveryAddress.fname} ${product.deliveryAddress.lname}</td>
                                                    <td class="text-center">${product.productId.name}</td>
                                                    <td class="text-center">${new Date(product.orderDate).toLocaleDateString() }</td>
                                                    <td class="text-center">Rs.${product.productId.Price}</td>
                                                    <td class="text-center ${product.paymentStatus == "Not Paid"?"badge-soft-warning":product.paymentStatus == "Paid"?"badge-soft-success":"badge-soft-danger"}">${product.paymentStatus}</td>
                                                    <td class="text-center ${product.productStatus == "pending" || product.productStatus == "Delivered" ?"badge-soft-success":"badge-soft-danger"}">${product.productStatus}</td>
                                                    <td class="text-center">${product.paymentMethod}</td>
                                                    
                                                </tr>

                     `

    
                }).join("")
            }
      })
    }
        
   
            
