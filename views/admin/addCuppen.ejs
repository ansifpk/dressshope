        function generateCouponId(length) {
            const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            const charactersLength = characters.length;
            let couponId = '';
            for (let i = 0; i < length; i++) {
                couponId += characters.charAt(Math.floor(Math.random() * charactersLength));
            }
            return couponId;
        }
            
            const couponId = generateCouponId(8);
            const id = document.getElementById("coupenCode");
            id.value=couponId
    </script>
    <script>
      function handleSubmit(button) {
         const title = document.getElementById("title").value.trim();
         const titleLabel = document.getElementById("titleLabel");
         const coupenCode = document.getElementById("coupenCode").value.trim();
         const coupenCodeLabel = document.getElementById("coupenCodeLabel")
         const min = document.getElementById("minLimit").value.trim();
         const minLabel = document.getElementById("minLabel")
         const offerPrice = document.getElementById("offerPrice").value.trim();
         const offerPriceLabel = document.getElementById("offerPriceLabel")
         const date = document.getElementById("date").value.trim();
         const dateLabel = document.getElementById("dateLabel")

         const image = document.getElementById("image").files[0]
        
         let error  = false;

         if(title.length == 0){
             titleLabel.style.color="red"
             error = true;
         }else{
            titleLabel.style.color=""
         }
       
         if(coupenCode.length == 0){
            error = true;
            coupenCodeLabel.style.color="red"
         }else{
           coupenCodeLabel.style.color=""
         }
         if(offerPrice.length == 0){
            error = true;
            offerPriceLabel.style.color="red"
         }else{
            offerPriceLabel.style.color=""
         }
         if(date.length == 0){
             dateLabel.style.color="red"
             error = true;
         }else{
             dateLabel.style.color=""
         }
         if(min.length == 0){
             minLabel.style.color="red"
             error = true;
         }else{
             minLabel.style.color=""
         }

         if(error){
             Swal.fire({
                title:"Error!.",
                text: "Please Provide All Informations!.",
                icon: "warning",
             });
           return;
         }
         if(!image){
             Swal.fire({
                title:"Error!.",
                text: "Please Choose an Image!.",
                icon: "warning",
             });
           return;
         }
         
          const formData = new FormData();;

         formData.append("file",image);
         formData.append("title",title);
     
         formData.append("coupenCode",coupenCode);
         formData.append("offerPrice",offerPrice);
         formData.append("date",date);
         formData.append("min",min);
         
         Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes`
                    }).then((result)=>{
                        if(result.isConfirmed){
                            button.disabled = true;
                             button.innerHTML = `<div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    Loading...
                                    `
                             fetch("/admin/addCoupon",{method:"POST",body:formData,"COntent-Type":"multipart/form-data"}).then((res)=>res.json())
                            .then((res)=>{
                                 button.disabled = false;
                                
                                if(res.success){
                                Swal.fire({
                                    title:"Success!.",
                                    text: res.message,
                                    icon: "success",
                                });
                                window.location.href="/admin/coupons";
                                }else{
                                     button.innerText = "Add Coupon"
                                Swal.fire({
                                    title:"Error!.",
                                    text:res.message,
                                    icon: "warning",
                                });
                                }
                            })
                        }
                    })
      }
    </script>
     <script>

       function preview() {
          const input = document.getElementById(`image`);
          const file = input.files
                if (file) {
                    const fileReader = new FileReader();
                    const preview = document.getElementById(`file-preview`);
                    fileReader.onload = function (event) {
                      
                        
                        preview.setAttribute('src', event.target.result);
                    }
                    fileReader.readAsDataURL(file[0]);
                }
          
        }
        
