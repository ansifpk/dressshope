    <script>
        function removeCoupon(id,num){
            console.log(id,num);
           
            Swal.fire({
                title: "Do You Want To Delete This coupon ?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
            if (result.isConfirmed) {
                
                fetch(`/admin/coupon`,{method:"DELETE",body:JSON.stringify({couponId:id}),headers:{"Content-Type":"application/json"}}).then((res)=>res.json())
                .then((res)=>{
                    if(res.coupons.length == 0){
                        document.getElementById("page").innerText=0
                         document.getElementById("totalPage").innerText=0
                        document.getElementById("table").innerHTML=
                    `
                                       <tr>
                                            <td colspan="3">Coupons Not Found</td>
                                        </tr>
                    `
                    }else{
                         document.getElementById("page").innerText=1;
                         document.getElementById("totalPage").innerText=res.totalPage;
                         const date = new Date()
                         document.getElementById("table").innerHTML=
                         res.coupons.map((coupon,i) => {
                           return `
                              <div id="gone${i}" class="card col-4" style="width: 18rem; background-image: url('${coupon.image.secure_url}'); background-size: cover; background-position: center; background-repeat: no-repeat; padding: 20px;">
                                <div class="card-body">
                                <h5 class="card-title text-center">${coupon.name}</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary text-center">Get Extra ${coupon.offer}%</h6>
                                <p class="card-text">Coupon Code: ${coupon.couponCode}</p>
                                <p  class="card-link">on minimum Rs: ${coupon.minLimite}</p>
                                <p class="card-link ${new Date(coupon.expiryDate) >= date ? "text-success" : "text-danger"}">status: ${new Date(coupon.expiryDate) >= date ? "Active" : "Expired"}</p>
                                <p class="card-link text-end">Valid till:${new Date(coupon.expiryDate).toLocaleDateString()}</p>
                               
                                </div>
                                <a href="/admin/editCoupon?id= ${coupon._id} ">Edit</a>
                                
                                <a class=" text-danger " onclick="removeCoupon('${coupon._id}','${i}')">delete</a>
                              </div>
                           `
                        }).join("");
                       
                    }
                    
                    
                })
            }
            });   
        }
    </script>
     
