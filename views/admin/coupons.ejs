     <script>
            function handlePage(action) {
               
                
                const sort = document.getElementById("sort").value;
                const filter = document.getElementById("filter").value;
                const totalPages = document.getElementById("totalPage").value;
                const search = document.getElementById("search").value;
                let table = document.getElementById("table");
                let page = document.getElementById("page");
              
                 if(action == "increment" && page.innerText*1<totalPages){
                  page.innerText++
                 }else if(action == "decrement" && page.innerText*1 >1){
                  page.innerText--
                 }else{
                    return;
                 }
                 
                fetch(`/admin/couponPagination?search=${search}&&page=${page.innerText}&&sort=${sort}&&filter${filter}`).then((res)=>res.json())
                .then((res)=>{
                   console.log(res);
                    const date = new Date()
                    table.innerHTML=
                        res.coupons.map((coupon,i) => {
