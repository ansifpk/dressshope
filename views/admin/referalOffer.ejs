    <script>
        function handleClick() {
           
            const button = document.getElementById("editButton");
            document.getElementById("ReferedUserPrice").disabled = false;
            document.getElementById("NewUserPrice").disabled = false;
            button.innerText = "SAVE"
            button.onclick = handleEdit
        }
    </script>
    <script>
        function handleEdit() {
            const NewUserPrice = document.getElementById("NewUserPrice");
            const _id = document.getElementById("_id").value;
            const ReferedUserPrice = document.getElementById("ReferedUserPrice");
            const NewUserPriceLabel = document.getElementById("NewUserPriceLabel");
            const ReferedUserPriceLabel = document.getElementById("ReferedUserPriceLabel");
            const button = document.getElementById("editButton");

            if(NewUserPrice.value.length == 0){
                NewUserPriceLabel.style.color="red";
                Swal.fire({
                    title:"Error!.",
                    text: "Plese Enter A Offer Price For The New User",
                    icon: "warning",
                });
                return;
            }else{
                 NewUserPriceLabel.style.color="";
            }

            if(ReferedUserPrice.value.length == 0){
                ReferedUserPriceLabel.style.color="red";
                Swal.fire({
                    title:"Error!.",
                    text: "Plese Enter A Offer Price For The Reffered User",
                    icon: "warning",
                });
                return;
            }else{
                 ReferedUserPriceLabel.style.color="";
            }

             Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes`
                    }).then((result)=>{
                        if(result.isConfirmed){
                            button.disabled = true;
                            button.innerHTML = ` <div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    Loading...
                                    `;
                            fetch("/admin/referalOffer",{method:"PATCH",body:JSON.stringify({ReferedUserPrice:ReferedUserPrice.value*1,NewUserPrice:NewUserPrice.value*1,refaralId:_id}),headers:{"Content-Type":"application/json"}}).then(res =>res.json())
                        .then((res)=>{
                           
                            button.disabled = false;
                           
                            if(res.success){
                               button.innerHTML = `EDIT`;
                               ReferedUserPrice.disabled=true
                               NewUserPrice.disabled=true
                               button.onclick = handleClick;
                                Swal.fire({
                                    title:"Success!.",
                                    text: res.message,
                                    icon: "success",
                               });
                            }else{
                              Swal.fire({
                                title:"Error!.",
                                text: res.message,
                                icon: "warning",
                             });
                             button.innerHTML = `SAVE`;
                            }
                        })
                        }
                    })
           
        }
    </script>
