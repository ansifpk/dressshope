    <script>
        function deleteOffer(id,num){
            Swal.fire({
  title: "Do You Want To Delete This Offer ?",
  text: "You won't be able to revert this!",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, delete it!"
}).then((result) => {
  if (result.isConfirmed) {
   
    fetch(`/admin/offer?offerId=${id}`,{method:"DELETE"}).then((res)=>res.json())
    .then((res)=>{
       if(res.success){
         Swal.fire({
            title: "Deleted!",
            text: "Offer has been deleted.",
            icon: "success"
            });
          const data =  document.getElementById(num);
          data.remove();
       }else{
        Swal.fire({
            title: "Failed!",
            text: res.message,
            icon: "warning"
            });
       }
    });
        
  }
});
         

        }
            
          
      
