        <script>
            function listProduct(tag,userId){
                console.log(tag.innerText)
                if(tag.innerText=='List'){
                    Swal.fire({
  title: "Are you sure?",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, List the Product!"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "Listed!",
      text: "This Product has been Listed.",
      icon: "success"
    });
                    tag.innerText="Unlist"
                    tag.style.background='green'
                    tag.style.color='white'
                    fetch(`/admin/listProducts?userId=${userId}`)
  }
});
                    
                }else if(tag.innerText=='Unlist'){
                    Swal.fire({
  title: "Are you sure?",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, Unlist the Product!"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "Unlist!",
      text: "This Product has been Unlisted.",
      icon: "success"
    });
                    tag.innerText="List"
                    tag.style.background='red'
                    tag.style.color='white'
                    fetch(`/admin/listProducts?userId=${userId}`)
  }
});
                    
                }
              
               

            }
