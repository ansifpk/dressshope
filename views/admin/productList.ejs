        <script>
            function listProduct(tag,productId){
                    Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes, ${tag.innerText} the Product!`
                    }).then((result)=>{
                        if(result.isConfirmed){

                               fetch(`/admin/listProducts?_id=${productId}`,{method:"PATCH"}).then((res)=>res.json())
                               .then((res)=>{
                                if(res.success){
                                    tag.innerText=`${tag.innerText == "Unlist"?"List":"Unlist" }`
                                    tag.style.background= `${tag.innerText == "Unlist"?"green":"red" }` 
                                    tag.style.color='white'
                                    Swal.fire({
                                        title: "Success!",
                                        text: res.message,
                                        icon: "success"
                                    });
                                }else{
                                    Swal.fire({
                                    title: "Error!",
                                    text: res.message,
                                    icon: "warning"
                                    });
                                }
                               })
                        }
                    })     
            }
        </script>
        <script>
            function handlSearch(tag) {
                
                let totalPages = document.getElementById("totalPages");
                fetch(`/admin/searchProduct?search=${tag.value}`).then((res)=>res.json())
                .then((res)=>{
                    document.getElementById("sort").value = ""
                    document.getElementById("filter").value = ""
                    totalPages.value = res.totelPage 
                    if(res.products.length == 0){
                        document.getElementById("page").innerText=0
                        document.getElementById("table").innerHTML=
                    `
                                       <tr>
                                            <td colspan="3">Products Not Found</td>
                                        </tr>
                    `
                    }else{
                        document.getElementById("page").innerText = 1
                        document.getElementById("table").innerHTML=
                        res.products.map((product) => {
                           return  `
                            <tr>
                                            <td>
                                                <a href="/detailes?id=${product._id}">
                                                    <img src="${product.image[0].secure_url}" class="img-sm img-thumbnail" alt="Item" /></td>
                                                </a>
                                                
                                            
                                            <td> ${product.name}</td>
                                            <td>${product.categoryID.name }</td>
                                            <td>Rs.${ product.Price }</td>
                                            <td>${product.stock }</td>
                                            <td>${product.Description }</td>
                                            <td>
                                                
                                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                                    <a href="/admin/editProducts?_id=${product._id }" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Edit </a>
                                                    <button class="btn btn-sm font-sm rounded text-white ${product.is_listed?"btn-success":"btn-danger"} " onclick="listProduct(this,'${product._id}')"> ${product.is_listed?"Unlist":"List"}  </button>
                                                    </div>
                                        </td>
                                            
                                        </tr>
                           `
                        }).join("");
                       
                    }
     
                })
            }
        </script>
        <script>
            function handlPage(action) {
                let totalPages = document.getElementById("totalPages").value;
                let page = document.getElementById("page")
                const search = document.getElementById("search").value
                const sort = document.getElementById("sort").value
                const filter = document.getElementById("filter").value
                 
                   if(action == "increment" && page.innerText*1<totalPages){
                    page.innerText++
                    }else if(action == "decrement" && page.innerText>1){
                    page.innerText--
                    }else{
                        return;
                    }
              
                 
                 fetch(`/admin/paginationProduct?search=${search}&&page=${page.innerText}&&sort=${sort}&&filter=${filter}`).then((res)=>res.json())
                 .then((res)=>{
                   
                    if(res.products.length == 0){

                    }else{
                        document.getElementById("table").innerHTML=
                        res.products.map((product) => {
                           return  `
                            <tr>
                                <td>
                                    <a href="/detailes?id=${product._id}">
                                        <img src="${product.image[0].secure_url}" class="img-sm img-thumbnail" alt="Item" /></td>
                                    </a>
                                <td> ${product.name}</td>
                                <td>${product.categoryID.name }</td>
                                <td>Rs.${ product.Price }</td>
                                <td>${product.stock }</td>
                                <td>${product.Description }</td>
                                <td>
                                 <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                    <a href="/admin/editProducts?_id=${product._id }" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Edit </a>
                                    <button class="btn btn-sm font-sm rounded text-white ${product.is_listed?"btn-success":"btn-danger"} " onclick="listProduct(this,'${product._id}')"> ${product.is_listed?"Unlist":"List"}  </button>
                                    </div>
                                 </td>
                            </tr>
                           `
                        }).join("");
                       
                    }
                 })
            }
        </script>
        <script>
