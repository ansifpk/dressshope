                    <header class="card-header">
                        <div class="row gx-3">
                            <div class="col-lg-6 col-md-6 me-auto">
                                <div class="searchform">
                                    <div class="input-group">
                                        <input id="search" list="search_terms"  oninput="handlSearch(this)" type="search" class="form-control" placeholder="Search products" />
                                    </div>
                                </div>
                            </div>
                           
                            <div class="col-lg-2 col-6 col-md-3">
                                <select id="sort" onchange="filterAndsortProduct()" class="form-select">
                                    <option value="" selected disabled>Sort Item</option>
                                    <option value="All">All</option>
                                    <option value="New">New</option>
                                    <option value="Old">Old</option>
                                    <option value="Price Low - High">Price Low - High</option>
                                    <option value="Price High - Low">Price High - Low</option>
                                    <option value="Name A - Z">Name A - Z</option>
                                    <option value="Name Z - A">Name Z - A</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-6 col-md-4">
                                <select id="filter" onchange="filterAndsortProduct()" class="form-select">
                                    <option value="" selected disabled>Filter Products</option>
                                    <option value="All">All</option>
                                    <%
                                     categories.map((value)=>{
                                        %>
                                        <option value="<%=value.name%>"><%=value.name%></option>
                                        <%
                                     })
                                    %>
                                    <option value="OUT OF STOCK">OUT OF STOCK</option>
